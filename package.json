{
  "name": "mc-client",
  "version": "0.15.0",
  "author": "Jack Cooper",
  "description": "MC Client",
  "repository": "https://github.com/jackcooper04/mc-client",
  "scripts": {
    "ng": "ng",
    "start": "electron-forge start",
    "build": "ng build --base-href ./",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "publish": "electron-forge publish",
    "make": "electron-forge make",
    "nodemon": "nodemon web_server.js --ignore server --ignore backend/servers.json --ignore server_files",
    "package": "electron-forge package",
    "reset": "echo [] > backend/servers.json",
    "push": "npm version minor && git push --follow-tags"
  },
  "main": "main.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.1.0-",
    "@angular/cdk": "^12.1.3",
    "@angular/common": "~12.1.0-",
    "@angular/compiler": "~12.1.0-",
    "@angular/core": "~12.1.0-",
    "@angular/forms": "~12.1.0-",
    "@angular/material": "^12.1.3",
    "@angular/platform-browser": "~12.1.0-",
    "@angular/platform-browser-dynamic": "~12.1.0-",
    "@angular/router": "~12.1.0-",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "modern-rcon": "^1.0.3",
    "morgan": "^1.10.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.2.0",
    "update-electron-app": "^2.0.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.1.3",
    "@angular/cli": "~12.1.3",
    "@angular/compiler-cli": "~12.1.0-",
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-wix": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "@electron-forge/publisher-github": "^6.0.0-beta.59",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "electron": "^13.1.7",
    "electron-wix-msi": "^3.2.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.3.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "jackcooper04",
              "name": "mc-client"
            },
            "draft": true
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mc-client"
          }

        }
      ]
    }
  }
}
